@model List<SimpleSubjectApp.Models.Subject>

<h1>Subjects List</h1>

<div>
    <ul>
        @foreach (var subject in Model)
        {
            <li><a href="#" onclick="navigateToSubjectDetails(@subject.Id)">@subject.Name</a></li>

        }
    </ul>
</div>


<form id="subjectDetailsForm" method="post" action="@Url.Action("SubjectDetails", "")">
    <input type="hidden" id="subjectIdInput" name="subjectId" />
</form>


<div>
    <a asp-action="AddSubject" asp-controller="" class="btn btn-primary">Add Subject</a>
</div>
<br/>
<div>
    <a asp-action="AddSubjectJSON" asp-controller="" class="btn btn-primary">Add Subject Using JSON Format</a>
</div>

<script>
    function navigateToSubjectDetails(subjectId) {
        
        document.getElementById("subjectIdInput").value = subjectId;

        document.getElementById("subjectDetailsForm").submit();
    }
</script>